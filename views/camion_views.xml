<odoo>
    <record id="view_camion_tree" model="ir.ui.view">
        <field name="name">mi_modulo.camion.tree</field>
        <field name="model">mi_modulo.camion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="barco_id"/>
            </tree>
        </field>
    </record>

    <record id="view_camion_form" model="ir.ui.view">
        <field name="name">mi_modulo.camion.form</field>
        <field name="model">mi_modulo.camion</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="barco_id"/>
                    </group>
                    <field name="servicio_ids">
                        <tree>
                            <field name="name"/>  <!-- Nombre del servicio -->
                            <field name="cantidad"/>  <!-- Cantidad del servicio -->
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <field name="name"/>
                                    <field name="cantidad"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>