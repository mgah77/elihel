<odoo>
    <!-- Vista de formulario para el Wizard -->
    <record id="view_wizard_trabajos_form" model="ir.ui.view">
        <field name="name">elihel.wizard_trabajos.form</field>
        <field name="model">elihel.wizard_trabajos</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="lugar"/>  <!-- Lugar de trabajo -->
                        <field name="mes"/>  <!-- Mes del trabajo -->
                        <field name="anno"/>  <!-- Año del trabajo -->
                    </group>
                    <div class="oe_title">
                        <h2>Trabajos Filtrados</h2>
                    </div>
                    <field name="resultado_ids">
                        <tree editable="bottom">
                            <field name="numero_certificado"/>  <!-- Número de certificado -->
                            <field name="fecha_llegada"/>  <!-- Fecha de llegada -->
                            <field name="matricula_camion"/>  <!-- Matrícula del camión -->
                            <field name="servicios"/>  <!-- Lista de servicios -->
                        </tree>
                    </field>
                    <div class="oe_title">
                        <h2>Detalle de Servicios</h2>
                    </div>
                    <group>
                        <t t-if="resultado_ids">
                            <t t-foreach="resultado_ids" t-as="resultado">
                                <div class="oe_subtitle">
                                    <h3>Certificado: <t t-esc="resultado.numero_certificado"/></h3>
                                    <p>Fecha de Llegada: <t t-esc="resultado.fecha_llegada"/></p>
                                    <p>Matrícula del Camión: <t t-esc="resultado.matricula_camion"/></p>
                                    <p>Servicios:</p>
                                    <ul>
                                        <t t-foreach="resultado.servicios.split(', ')" t-as="servicio">
                                            <li><t t-esc="servicio"/></li>
                                        </t>
                                    </ul>
                                </div>
                                <hr/>
                            </t>
                            <t t-else>
                                <p>No hay resultados para mostrar.</p>
                            </t>
                        </t>
                    </group>
                    <footer>
                        <button string="Cerrar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el Wizard -->
    <record id="action_wizard_trabajos" model="ir.actions.act_window">
        <field name="name">Filtrar Trabajos</field>
        <field name="res_model">elihel.wizard_trabajos</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menú para abrir el Wizard -->
    <menuitem id="menu_wizard_trabajos" name="Filtrar Trabajos" parent="menu_root" action="action_wizard_trabajos"/>
</odoo>